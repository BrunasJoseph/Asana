<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asana.Maui.MainPage"
             NavigatedTo="ContentPage_NavigatedTo"
             NavigatedFrom="ContentPage_NavigatedFrom">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!-- Tool Bar-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Show Completed Tasks -->
                    <Label Grid.Column="0" Text="Show Completed Tasks:" VerticalOptions="Center" />
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsShowCompleted}" VerticalOptions="Center" />

                    <!-- Sort Alphabetically -->
                    <Label Grid.Column="2" Text="Sort Alphabetically:" VerticalOptions="Center" />
                    <CheckBox Grid.Column="3" IsChecked="{Binding IsSortedByName}" VerticalOptions="Center" />

                    <!-- Search -->
                    <Grid Grid.Column="4" ColumnSpacing="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Entry Grid.Column="0" Text="{Binding Query}" Placeholder="Search..." />
                        <Button Grid.Column="1" Text="Search" Clicked="SearchClicked" />
                    </Grid>
                </Grid>
                <!-- Projects List-->
                <ListView
                Grid.Row="1"
                ItemsSource="{Binding Projects}"
                SelectedItem="{Binding SelectedProject}"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label TextColor="Green" Grid.Row="0" Grid.Column="0" Text="{Binding Model.Name}"/>
                                    <Label Grid.Row="1" Grid.Column="0" Text="{Binding Model.Description}"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- ToDo List-->
                <ListView
                Grid.Row="2"
                ItemsSource="{Binding ToDos}"
                SelectedItem="{Binding SelectedToDo}"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="10*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding Model.IsCompleted}" Grid.Column="0"/>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label TextColor="Red" Grid.Row="0" Grid.Column="0" Text="{Binding Model.Name}"/>
                                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding Model.Description}"/>
                                        <Label TextColor="Green" Grid.Row="1" Grid.Column="1" Text="{Binding Model.DueDate, StringFormat='Due: {0:d}'}"/>
                                    </Grid>

                                    <!--<Button Grid.Column="2" Text="Delete" Clicked="InLineDeleteClicked" Command="{Binding DeleteCommand}"/>-->
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- Button Bar -->
                <VerticalStackLayout Grid.Row="3">
                    <Button Text="Add New Project" Clicked="AddNewProjClicked"/>
                    <Button Text="Edit Selected Project" Clicked="EditProjClicked"/>
                    <Button Text="Delete Selected Project" Clicked="DeleteProjClicked"/>
                    <Button Text="Add New ToDo" Clicked="AddNewClicked"/>
                    <Button Text="Edit Selected ToDo" Clicked="EditClicked"/>
                    <Button Text="Delete Selected ToDo" Clicked="DeleteClicked"/>
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
